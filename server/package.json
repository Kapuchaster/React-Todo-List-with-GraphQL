{
  "name": "server",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "generate": "graphql-codegen --config codegen.ts",
    "copy-schema-to-dist": "cp -r ./src/graphql/ ./dist/src/graphql/",
    "build": "yarn generate && tsc && yarn copy-schema-to-dist",
    "start": "yarn build && node ./dist/src/index.js"
  },
  "dependencies": {
    "@apollo/server": "^4.1.1",
    "graphql": "^16.6.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.13.12",
    "@graphql-codegen/typescript": "2.8.1",
    "@graphql-codegen/typescript-resolvers": "2.7.6",
    "@graphql-tools/graphql-file-loader": "^7.5.10",
    "@graphql-tools/load": "^7.8.5",
    "@types/node": "^18.11.9",
    "typescript": "^4.8.4",
    "@graphql-codegen/introspection": "2.2.1"
  }
}
